
@{
    ViewBag.Title = "Reporte7";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<div class="card">







    <div class="card-header">
        <hr />
        <h1 style="text-align:center"> <i class="fa fa-address-card"></i>  REPORTE: MEDICAMENTO APLICADO POR PACIENTE </h1>
        <div class="row">

        </div>
    </div>
    <div class="card-body">



        <table id="usuario" class="display cell-borde" style="width:100%">
            <thead style="background-color:darkgray; color:black">
                <tr>
                    <th>No cita</th>
                    <th>Paciente</th>
                    <th>Cantidad</th>

                    <th>Medicamento Aplicado</th>


                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>


@section scripts{
    <script>

        var tabladata;
        var filaSeleccionada;

        $("#txtFechaDeFin").datepicker({dateFormat: 'dd/mm/yy'}).datepicker('setDate',new Date())
        $("#txtFechaDeInicio").datepicker({ dateFormat: 'dd/mm/yy' }).datepicker('setDate', new Date())




        $(document).ready(function () {

              var Url = '@Url.Action("ListarReporte7", "Mantenimiento")'

                    tabladata = $("#usuario").DataTable({
                        responsive: true,
                        ordering: false,
                        "ajax": {
                            url: Url,
                            type: "GET",
                            dataType: "json"
                        },
                        "columns":
                        [

                                { "data": "IdCita" },
                                { "data": "Paciente" },
                                { "data": "cantidad" },
                                { "data": "Medicamentos" },



                        ],
                        "language": {
                            "url": "https://cdn.datatables.net/plug-ins/1.11.3/i18n/es_es.json"
                        }

                    });

           
                })

        function autoRefresh() {
            window.location = window.location.href;
        }
        setInterval('autoRefresh()', 5000);



        $.fn.dataTable.ext.errMode = 'throw';



    </script>


}






